---
import Layout from '../layouts/Layout.astro';

const categories = {
  movies: {
    name: "Movies",
    subcategories: {
      hollywood: {
        name: "Hollywood",
        genres: ["Action", "Adventure", "Comedy", "Drama", "Horror", "Sci-Fi", "Thriller"]
      },
      bollywood: {
        name: "Bollywood",
        genres: ["Action", "Drama", "Romance", "Comedy", "Thriller"]
      },
      regional: {
        name: "Regional",
        genres: ["Tamil", "Telugu", "Malayalam", "Kannada", "Bengali"]
      }
    }
  },
  webSeries: {
    name: "Web Series",
    subcategories: {
      netflix: {
        name: "Netflix",
        genres: ["Original Series", "Movies", "Documentaries"]
      },
      amazon: {
        name: "Amazon Prime",
        genres: ["Original Series", "Movies", "Shows"]
      },
      others: {
        name: "Other Platforms",
        genres: ["HBO", "Hulu", "Disney+"]
      }
    }
  },
  tv: {
    name: "TV Shows",
    subcategories: {
      american: {
        name: "American TV",
        genres: ["Drama Series", "Sitcoms", "Reality Shows"]
      },
      british: {
        name: "British TV",
        genres: ["Drama", "Comedy", "Documentary"]
      },
      asian: {
        name: "Asian TV",
        genres: ["K-Drama", "Anime", "Chinese Drama"]
      }
    }
  }
};
---

<Layout>
  <div class="category-container">
    {Object.entries(categories).map(([key, category]) => (
      <div class="category-section" id={key}>
        <h2>{category.name}</h2>
        <div class="subcategories">
          {Object.entries(category.subcategories).map(([subKey, subcategory]) => (
            <div class="subcategory">
              <h3>{subcategory.name}</h3>
              <div class="genres">
                {subcategory.genres.map(genre => (
                  <a
                    href={`https://filmyzilla.moviesda10.com/msearch.php?q=${encodeURIComponent(
                      `${category.name} ${subcategory.name} ${genre} download`
                    )}`}
                    target="_blank"
                    class="genre-link"
                  >
                    {genre}
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</Layout>

<style>
  .category-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .category-section {
    background: var(--secondary-color);
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
    border: 1px solid var(--border-color);
  }

  h2 {
    color: var(--accent-color);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
    padding-bottom: 0.25rem;
  }

  h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background: var(--accent-color);
    border-radius: 1px;
  }

  .subcategories {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .subcategory {
    background: white;
    border-radius: 6px;
    padding: 1rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border: 1px solid var(--border-color);
  }

  .subcategory:hover {
    transform: translateY(-2px);
    box-shadow: 0 2px 8px rgba(2, 132, 199, 0.1);
  }

  h3 {
    color: var(--text-color);
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.25rem;
    border-bottom: 1px solid rgba(2, 132, 199, 0.2);
    font-weight: 600;
  }

  .genres {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .genre-link {
    background: var(--secondary-color);
    color: var(--accent-color);
    padding: 0.35rem 0.75rem;
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid var(--border-color);
    font-weight: 500;
    font-size: 0.85rem;
  }

  .genre-link:hover {
    background: var(--accent-color);
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 1px 4px rgba(2, 132, 199, 0.2);
  }

  @media (max-width: 768px) {
    .category-section {
      padding: 0.75rem;
    }

    .subcategories {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    h2 {
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
    }

    h3 {
      font-size: 1rem;
    }

    .genres {
      gap: 0.4rem;
    }

    .genre-link {
      padding: 0.25rem 0.6rem;
      font-size: 0.8rem;
    }
  }
</style>